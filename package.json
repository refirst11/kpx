{
  "name": "kpx",
  "version": "0.2.1",
  "description": "Key Process Execute: TypeScript Module Loader",
  "keywords": [
    "esm",
    "cjs",
    "loader",
    "typescript",
    "import hook",
    "require hook"
  ],
  "author": "Refirst",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/refirst11/kpx.git"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/esm-register.mjs",
      "require": "./dist/cjs-register.cjs"
    },
    "./dist/index.mjs": "./dist/index.mjs"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rimraf dist && npx tsc && pnpm minify",
    "minify": "terser dist/index.mjs -c -o dist/index.mjs && terser dist/index.cjs -c -o dist/index.cjs"
  },
  "dependencies": {
    "@swc/core": "^1.11.24"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "rimraf": "^6.0.1",
    "terser": "^5.39.0",
    "typescript": "^5.8.2"
  }
}
